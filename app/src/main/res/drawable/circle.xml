<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#416EA7"
                android:endColor="#416EA7"
                android:angle="270" />
            <corners  android:radius="5dp" />

        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:startColor="#416EA7"
                android:endColor="#416EA7"
                android:angle="270" />
            <corners
                android:radius="2dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="#6471d0ea"
                android:endColor="#6471d0ea"
                android:angle="270" />
            <stroke android:width="2dp" android:color="#70ff6600"/>
            <corners  android:radius="3dp" />

        </shape>
    </item>
</selector>