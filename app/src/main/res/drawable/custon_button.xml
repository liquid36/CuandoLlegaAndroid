<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#ff00bc06"
                android:endColor="#ff00bc06"
                android:angle="270" />
            <corners  android:radius="5dp" />

        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:startColor="#ff00bc06"
                android:endColor="#ff00bc06"
                android:angle="270" />
            <corners
                android:radius="2dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="#ff8983ff"
                android:endColor="#ff8983ff"
                android:angle="270" />
            <corners  android:radius="5dp" />

        </shape>
    </item>
</selector>