<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clickable="true"
    android:background="@drawable/backfondo"
    android:longClickable="true"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="20dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Mendoza y Francia"
        android:id="@+id/txtCalles"
        android:textColor="#ff000471"
        android:layout_gravity="center_vertical"
        android:paddingLeft="10dp"
        android:maxLines="3"
        android:textIsSelectable="false"
        android:textSize="20dp"
        android:layout_marginBottom="5dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="120 133 143 127"
            android:id="@+id/txtColectivos"
            android:textSize="15dp"
            android:layout_gravity="left"
            android:layout_weight="6"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="a 500mts"
            android:id="@+id/txtDist"
            android:textColor="#ff717171"
            android:layout_marginLeft="10dp"
            android:layout_gravity="right"
            android:layout_weight="2"
            android:gravity="right" />
    </LinearLayout>

</LinearLayout>