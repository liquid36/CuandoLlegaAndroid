<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/wlist"
    android:paddingLeft="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="10dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="0"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="15dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_marginRight="6dp"
            android:background="@color/actionbar_background"></LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/laycalles"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="153"
                android:id="@+id/txtBus"
                android:layout_gravity="center_vertical"
                android:textColor="#ff525252"
                android:textSize="30dp"
                android:enabled="true"
                android:maxLines="3"
                android:layout_weight="4"
                android:paddingLeft="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Cementerio la Piedad"
                android:id="@+id/txtDest"
                android:textColor="#ff000471"
                android:layout_gravity="center_vertical"
                android:maxLines="3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Medium Text"
                android:id="@+id/txtLugar"
                android:textColor="#ff525252"
                android:layout_gravity="left"
                android:visibility="visible" />

        </LinearLayout>

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/waitingbar"
            android:indeterminate="true"
            android:visibility="visible"
            android:layout_weight="0" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/actionIcon"
            android:src="@drawable/starfull"
            android:layout_gravity="center_vertical|top"
            android:layout_weight="0"
            android:clickable="true"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:scaleType="center"
            android:visibility="gone" />


    </LinearLayout>

</LinearLayout>