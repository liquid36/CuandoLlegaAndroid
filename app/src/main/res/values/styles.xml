<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarStyle">@style/MyActionBar</item>

        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Cuandollega</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Cuandollega</item>

        <item name="android:actionBarTabBarStyle">@style/ActionBarTabBarStyle.Cuandollega</item>
        <item name="actionBarTabBarStyle">@style/ActionBarTabBarStyle.Cuandollega</item>


    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/actionbar_background</item>
        <item name="background">@color/actionbar_background</item>
        <item name="android:icon">@drawable/actionbaricon</item>
        <item name="icon">@drawable/actionbaricon</item>
    </style>

    <style name="ActionBarTabStyle.Cuandollega" parent="@style/Widget.AppCompat.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_bar_background</item>
        <item name="background">@drawable/tab_bar_background</item>
    </style>

    <style name="ActionBarTabBarStyle.Cuandollega" parent="@style/Widget.AppCompat.Light.ActionBar.TabView">
        <item name="android:background">@color/actionbar_background</item>
        <item name="background">@color/actionbar_background</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
